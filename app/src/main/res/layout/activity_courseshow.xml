<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/indigo"
    android:orientation="vertical"
    tools:context="com.association.assk.Components">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="170dp"
        android:id="@+id/relative"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/assk"
            android:text="CHOOSE THE COURSE "
            android:textColor="@color/white"
            android:layout_centerInParent="true"
            android:textSize="25dp"
            />

    </RelativeLayout>
    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="400dp"
        android:id="@+id/grid_"
        android:layout_marginTop="45dp"
        android:alignmentMode="alignBounds"
        android:columnOrderPreserved="false"
        android:rowCount="3"
        android:columnCount="2">
        <androidx.cardview.widget.CardView
            android:layout_width="0dp"
            android:layout_height="100dp"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:padding="20dp"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="16dp"
            android:layout_marginRight="16dp"
            app:cardCornerRadius="8dp"
            app:cardElevation="35dp"
            android:id="@+id/cardONE"
            app:cardBackgroundColor="@color/indigo">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/relative_1">

                <ImageView
                    android:id="@+id/exec"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="20dp"
                    android:src="@drawable/ic_baseline_office" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/executive"
                    android:textColor="#ffffff"
                    android:layout_below="@id/exec"
                    android:layout_marginTop="10dp"
                    android:text="QUANTITY SURVEYING"
                    android:layout_centerInParent="true"
                    android:textSize="12sp" />

            </RelativeLayout>

        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:layout_width="0dp"
            android:layout_height="100dp"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:padding="20dp"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="16dp"
            android:layout_marginRight="16dp"
            app:cardCornerRadius="8dp"
            app:cardElevation="35dp"
            android:id="@+id/cardTWO"
            app:cardBackgroundColor="@color/indigo">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/relative_2">
                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:id="@+id/register"
                    android:layout_marginTop="20dp"
                    android:layout_centerHorizontal="true"
                    android:src="@drawable/ic_baseline_how_to_reg_24"/>

                <TextView
                    android:id="@+id/register_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/register"
                    android:layout_centerInParent="true"
                    android:layout_marginTop="10dp"
                    android:text="VALUATION SURVEYING "
                    android:textColor="#ffffff"
                    android:textSize="12sp" />

            </RelativeLayout>

        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:layout_width="0dp"
            android:layout_height="100dp"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:padding="20dp"
            app:cardCornerRadius="8dp"
            android:layout_marginLeft="20dp"
            app:cardElevation="35dp"
            android:id="@+id/cardTHREE"
            app:cardBackgroundColor="@color/indigo">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/relative_4">

                <ImageView
                    android:id="@+id/isu1"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="20dp"
                    android:src="@drawable/ic_office" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/isu"
                    android:textColor="#ffffff"
                    android:layout_below="@id/isu1"
                    android:layout_marginTop="10dp"
                    android:text="LAND SURVEYING"
                    android:layout_centerInParent="true"
                    android:textSize="12sp" />

            </RelativeLayout>

        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:padding="20dp"
            android:layout_marginTop="10dp"
            app:cardCornerRadius="8dp"
            android:layout_marginLeft="20dp"
            app:cardElevation="35dp"
            android:id="@+id/cardFOUR"
            app:cardBackgroundColor="@color/indigo">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/relative_5">

                <ImageView
                    android:id="@+id/isug"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="20dp"
                    android:src="@drawable/ic_baseline_border_clear_24" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/isu_txt"
                    android:textColor="#ffffff"
                    android:layout_below="@id/isug"
                    android:layout_marginTop="10dp"
                    android:text="ISU STUDENT LEVEL"
                    android:layout_centerInParent="true"
                    android:textSize="12sp" />

            </RelativeLayout>

        </androidx.cardview.widget.CardView>


    </GridLayout>



</LinearLayout>